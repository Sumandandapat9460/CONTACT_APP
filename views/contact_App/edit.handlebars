<section class="c1">
    <article>
        <h1>Update a Contact</h1>
        <form action="/api/edit/{{editData._id}}" method="post">
            <div class="con-group">
                <label for="fname">First Name:</label>
                <input type="text" id="fname" name="fname" placeholder="Enter the First Name"
                    value="{{editData.fname}}">
            </div>
            <div class="con-group">
                <label for="lname">Last Name:</label>
                <input type="text" id="lname" name="lname" placeholder="Enter the Last Name" value="{{editData.lname}}">
            </div>
            <div class="con-group">
                <label for="nmbr">Mobile Number:</label>
                <input type="text" id="nmbr" name="nmbr" placeholder="Enter the Number" value="{{editData.nmbr}}">
            </div>
            <div class="con-group">
                <label for="loc">Saving Location:</label>
                <select name="loc" id="loc">
                    <option value="mobile">Mobile</option>
                    <option value="sim">Sim</option>
                    <option value="email">Email</option>
                </select>
            </div>
            <div class="con-group">
                <button type="submit">Update Contact</button>
            </div>
        </form>
    </article>
</section>